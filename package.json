{
  "name": "promisify-file-reader",
  "description": "Promise File Reader",
  "license": "MIT",
  "author": "fisker Cheung <lionkay@gmail.com> (https://www.fiskercheung.com/)",
  "repository": "fisker/promise-file-reader",
  "version": "3.0.4",
  "main": "lib/index.common.js",
  "module": "lib/index.min.mjs",
  "browser": "lib/index.min.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "rimraf lib",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "release": "run-s lint clean build test dist",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write",
    "update-dependencies": "yarn upgrade-interactive --latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^7.6.1",
    "@fisker/commitlint-config": "^1.0.8",
    "@fisker/eslint-config": "^1.0.14",
    "@fisker/eslint-config-jest": "^1.0.2",
    "@fisker/lint-staged-config": "^1.0.4",
    "@fisker/prettier-config": "^1.0.17",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "babel-plugin-transform-async-to-promises": "^0.8.10",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "jest-environment-jsdom-thirteen": "^1.0.1",
    "jsdom": "^15.1.0",
    "lint-staged": "^8.1.7",
    "markdownlint-cli": "^0.16.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "rollup": "^1.12.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-filesize": "^6.1.0",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-terser": "^5.0.0"
  },
  "keywords": [
    "file",
    "fileReader",
    "promise"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jsdelivr": "lib/index.min.js",
  "unpkg": "lib/index.min.js"
}

{
  "name": "promisify-file-reader",
  "description": "Promise File Reader",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "repository": "fisker/promise-file-reader",
  "version": "3.0.4",
  "main": "lib/index.common.js",
  "module": "lib/index.min.mjs",
  "browser": "lib/index.min.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "rimraf lib",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue}",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "release": "run-s lint clean build test format dist",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@fisker/commitlint-config": "^1.1.0",
    "@fisker/eslint-config": "^1.2.4",
    "@fisker/eslint-config-jest": "^1.1.0",
    "@fisker/husky-config": "^1.1.0",
    "@fisker/lint-staged-config": "^1.0.4",
    "@fisker/prettier-config": "^1.0.17",
    "babel-jest": "^24.8.0",
    "babel-plugin-transform-async-to-promises": "^0.8.12",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "jest-environment-jsdom-thirteen": "^1.0.1",
    "jsdom": "^15.1.1",
    "lint-staged": "^9.0.1",
    "markdownlint-cli": "^0.17.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rollup": "^1.16.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-filesize": "^6.1.1",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-terser": "^5.0.0"
  },
  "keywords": [
    "file",
    "fileReader",
    "promise"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jsdelivr": "lib/index.min.js",
  "unpkg": "lib/index.min.js",
  "sideEffects": false
}
